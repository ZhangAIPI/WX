<!--pages/mine/change.wxml-->
<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells__title">修改个人信息</view>
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">姓名</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写本人姓名" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">住址</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写本人住址" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">学校</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写就读学校"  placeholder-class="weui-input__placeholder" />
						</view>
          </view>
          <view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">年级</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写就读年级"  placeholder-class="weui-input__placeholder" />
						</view>
          </view>
          <view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">班级</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写就读班级"  placeholder-class="weui-input__placeholder" />
						</view>
					</view>

          <view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">学号</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写个人学号"  placeholder-class="weui-input__placeholder" />
						</view>
					</view>
          
          <view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">联系方式</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写绑定的电话号码"  type='number'  placeholder-class="weui-input__placeholder" />
						</view>
					</view>

				</view>
			</view>
		</view>
		<view class="button-sp-area">
			<a  bindtap="open" data-url="info" class="weui-btn weui-btn_default">确认</a>
		</view>
